<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bc">

    <Button
        android:id="@+id/Signup_google_buton"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margintop"
        android:background="@color/RedHue"
        android:text="@string/Google"
        android:textColor="@color/whiteHue"/>

    <Button
        android:id="@+id/signup_facebook_button"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginbtwnbuttons"
        android:background="@color/BlueHUe"
        android:text="@string/Facebook"
        android:textColor="@color/whiteHue"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="251dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginbtwnbuttons"
        android:hint="you@example.com"
        android:textColorHint="@color/whiteHue"
        android:textColor="@color/whiteHue"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginbtwnbuttons"
        android:hint="password"
        android:textColorHint="@color/whiteHue"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_login"
        android:layout_width="249dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginbtwnbuttons"
        android:background="@color/RedHue"
        android:text="@string/login"
        android:textColor="@color/whiteHue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="OR"
        android:textColor="@color/whiteHue"/>

    <Button
        android:id="@+id/login_signup"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/whiteHue"
        android:text="@string/sign_up" />

</LinearLayout>